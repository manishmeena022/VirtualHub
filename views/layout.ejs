            <%- body %>
        </main>
        <%- include('_footer') %>

        <!-- cutsom Script -->
        <%- script %>
        <script>
            <%if(locals.flash.success && locals.flash.success.length > 0) 
            { %>
                new Noty({
                    theme: 'metroui',
                    text: "<%= locals.flash.success %>",
                    type: 'success',
                    layout: 'topRight',
                    timeout: 2000
                }).show();
            <%} %>
            /* for error messages */
            <%if(locals.flash.error && locals.flash.error.length > 0) 
            { %>
                new Noty({
                    theme: 'metroio',
                    text: "<%=locals.flash.error %>",
                    type: 'error',
                    layout: 'topRight',
                    timeout: 2000
                }).show();
            <%} %>
        </script>
